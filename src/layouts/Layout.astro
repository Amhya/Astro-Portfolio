---
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';
import { SEO } from 'astro-seo';
export interface LayoutProps {
	title: string;
}

const { title = 'John Doe | Web developer' } = Astro.props as LayoutProps;

---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth" data-testid="html">
	<head>
		<SEO
			title="A Very Descriptive Title"
			description="A heavily optimized description full of well-researched keywords."
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"> </script> 
		<script src="https://kit.fontawesome.com/380bb5c73c.js" crossorigin="anonymous"></script>
		<script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.0/flowbite.min.js"></script>
		<title>{title}</title>
		
	</head>
	<body
		class="mx-auto max-w-screen-xl bg-white px-5 font-sans text-white dark:bg-black xs:text-[16px] md:text-[18px]"
	>
		<Navbar />
		
		<slot />
		
		
		<Footer />
		<style is:global>
			
	
			@import url('https://fonts.cdnfonts.com/css/pf-tempesta-five');

			img {
				content-visibility: auto;
			}
		</style>
	</body>
	
</html>
