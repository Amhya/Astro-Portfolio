---
import profile from '@assets/images/metoo.png';
import speak from '@assets/images/speak.png';
import { Image } from '@astrojs/image/components';
import Button from '@components/ui/Button.astro';
import textanimation from '@components/ui/textanimation.astro';
---

<section
	data-testid="hero"
	class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<p class="flex-none font-pixel2 text-md text-black dark:text-white">Hi! Welcome to my Website porfolio</p>
		<h1 class="mb-10 font-pixel font-semibold text-2xl text-black dark:text-white lg:text-4xl">
			My name is <br>Ernesto Esguerra and I am a
			<div id="Animation-front" class=" inline-flex text-3xl font-pixel2">
				<b>
				<span1 >
					&nbsp;Web developer<br /> 
					&nbsp;Like Frontend<br />
					&nbsp;Can Backend<br />
					&nbsp;Love Anamation
				</span1>
				</b>
			</div> 
		</h1>
			
	
		
	
		
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} class="{'flex'} font-pixel2" name="learn more">Learn more</Button>
		</div>
	</div>
	
	<div data-testid="hero-img" class="mb-10 flex w-1/2 items-center justify-center">
		
		<Image
			src={profile}
			alt="Me"
			aspectRatio="4:4"
			format="png"
			width={400}
			height={400}
			loading="eager"
		
		/>
		<Image
			src={speak}
			alt="[pixel bubble]"
			aspectRatio="3:3"
			format="png"
			width={200}
			height={200}
			loading="eager"
			class="w-1/2"
		/>
	</div>
</section>
<style>
	
	#Animation-front{
	font: normal 40px/50px ;
	color: #999;
	}
	p1{
	white-space: nowrap;
	}
	b {
	overflow: hidden;
	position: relative;
	height: 40px;
	float: left; 
	}

	span1 {
	display: inline-block;
	color: #df7c1f;
	position: relative;
	white-space: nowrap;
	animation: move 6s;
	animation-iteration-count: infinite;
	animation-delay: 3s;
	
  	letter-spacing: 2px;

	}
	@keyframes move {
	0%  { top: 0px; }
	20% { top: -50px; }
	40% { top: -90px; }
	60% { top: -140px; }
	60% { top: -140px; }
	80% { top: -0px;}
	80% { top: -0px;}
	}
	
</style>

